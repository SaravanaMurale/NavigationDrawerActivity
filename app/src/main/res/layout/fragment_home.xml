<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#cccccc"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Murali"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number:" />

                <TextView
                    android:id="@+id/customerMobileNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9123521374"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    />

                <ImageView
                    android:id="@+id/tvPrev"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:text="Prev"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/left"
                    android:layout_below="@+id/userName"
                    />

                <ImageView
                    android:id="@+id/tvNext"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_toLeftOf="@+id/tvCall"
                    android:text="Next"
                    android:src="@drawable/right"
                    android:layout_marginLeft="30dp"
                    />

                <ImageView
                    android:id="@+id/whatsApp"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:src="@drawable/whatapp"
                    android:layout_below="@+id/custCallNumber"
                    android:layout_marginLeft="30dp"
                    />

                <ImageView
                    android:id="@+id/callIcon"
                    android:layout_width="25dp"
                    android:layout_height="23dp"
                    android:src="@drawable/call"
                    android:layout_marginLeft="20dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:" />

                <TextView
                    android:id="@+id/numberStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    />



            </LinearLayout>



        </LinearLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>